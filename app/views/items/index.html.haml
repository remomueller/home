%h1.display-1 Items

%table.table
  %thead
    %tr
      %th Box
      %th Name
      %th Location
      %th Description
      %th{ colspan: 3 }

  %tbody
    - @items.each do |item|
      %tr
        %td= item.box
        %td= link_to item.name, item
        %td= item.location
        %td= item.description
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: "Delete #{item.name}?" }

%br

= link_to 'New Item', new_item_path
